{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": [
      "ESNext"
    ],
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@application/*": [
        "src/application/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@root/*": [
        "*"
      ]
    }
  },
  "exclude": [
    "jest.config.ts",
    "**/__mocks__",
    "**/__tests__",
    "**/*.test.js"
  ]
}
